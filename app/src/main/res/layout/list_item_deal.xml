<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true">

  <android.support.design.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <FrameLayout
          android:id="@+id/brand_bar"
          android:background="@color/black"
          android:layout_width="match_parent"
          android:layout_height="56dp">

        <ImageView
            android:id="@+id/brand_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
      </FrameLayout>
      <!--suppress AndroidLintContentDescription -->
      <com.vagabond.dealhunting.ui.DynamicHeightImageView
          android:id="@+id/thumbnail"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:background="@color/photo_placeholder"
          android:scaleType="centerCrop"/>

      <TextView
          android:id="@+id/deal_title_textview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-condensed"
          android:textSize="14sp"
          android:textColor="@color/black"
          android:paddingTop="16dp"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/padding_view">

        <ImageView
            android:id="@+id/store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_store_black_24dp"/>

        <TextView
            android:id="@+id/store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/store_icon"
            android:layout_toEndOf="@+id/store_icon"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_place_black_24dp"
            android:layout_toLeftOf="@+id/distance_textview"
            android:layout_toStartOf="@+id/distance_textview"/>

        <TextView
            android:id="@+id/distance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="12km"
            android:fontFamily="sans-serif-condensed"/>
      </RelativeLayout>
    </LinearLayout>
  </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>