<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <ImageView
    android:id="@+id/search_store_item_logo"
    android:layout_width="@dimen/navdrawer_profile_image_size"
    android:layout_height="@dimen/navdrawer_profile_image_size"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_centerVertical="true"
    android:background="@drawable/border_shape"
    app:srcCompat="@drawable/ic_default_avatar"/>

  <com.vagabond.dealhunting.ui.widget.SearchSnippet
    android:id="@+id/search_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:listPreferredItemHeightSmall"
    android:layout_centerVertical="true"
    android:paddingTop="@dimen/spacing_normal"
    android:paddingBottom="@dimen/spacing_normal"
    android:layout_marginLeft="@dimen/text_left_padding"
    android:layout_marginStart="@dimen/text_left_padding"/>
</RelativeLayout>